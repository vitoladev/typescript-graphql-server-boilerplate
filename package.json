{
  "name": "typescript-graphql-server-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "build": "tsc",
    "dev": "ts-node-dev -r dotenv/config --no-notify --respawn --transpile-only src/index.ts",
    "start": "node build/index.js",
    "lint": "eslint --ext .ts src",
    "lint:fix": "yarn lint --fix",
    "nexus:reflect": "NEXUS_SHOULD_EXIT_AFTER_REFLECTION=true ts-node --transpile-only src/graphql/index.ts",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "dependencies": {
    "altair-fastify-plugin": "^4.4.1",
    "fastify": "^3.29.0",
    "fastify-plugin": "^3.0.1",
    "graphql": "^16.5.0",
    "mercurius": "^9.5.0",
    "nexus": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
