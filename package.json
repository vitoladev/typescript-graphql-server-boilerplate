{
  "name": "typescript-graphql-server-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "husky install",
    "build": "tsc",
    "dev": "ts-node -r dotenv/config --transpile-only src/index.ts",
    "start": "node build/index.js",
    "lint": "eslint --ext .ts src --ignore-path .gitignore",
    "lint:fix": "yarn lint --fix",
    "nexus:reflect": "NEXUS_SHOULD_EXIT_AFTER_REFLECTION=true ts-node --transpile-only src/graphql/index.ts",
    "test": "NODE_ENV=test jest --runInBand"
  },
  "dependencies": {
    "@fastify/cors": "^8.0.0",
    "@fastify/helmet": "^9.1.0",
    "fastify": "4.2.0",
    "fastify-plugin": "^3.0.1",
    "graphql": "^16.5.0",
    "mercurius": "^13.4.0",
    "nexus": "^1.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.0.1",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "lint-staged": "^13.0.1",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
